                sessionStorage.setItem('page', 'Health');
            });


            $(".personal_information").click(function () {
                sessionStorage.setItem('page', 'information');
            });


            window.onload = function () {
                setTimeout(function () { $('.alert1').fadeOut() }, 3000);
                if (sessionStorage.getItem('page') == 'Health') {
                    $('.Health_information')[0].click();
