            $loading.hide();
        });
        $(document).ready(function () {
            $(".Health_information").on('click', function () {
                $(this).addClass('active');
                $(".personal_information").removeClass('active');
            });

            $(".personal_information").on('click', function () {
                $(this).addClass('active');
                $(".Health_information").removeClass('active');
            });


            //keep the page where is it on refrech
